{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/semi": "error",
    "curly": "error",
    "eqeqeq": "error",
    "no-console": "warn",
    "no-throw-literal": "error",
    "semi": "off"
  },
  "ignorePatterns": ["lib", "**/*.d.ts"]
}
